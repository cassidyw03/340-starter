<!-- Content Heading -->
 <% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message Block (when needed) -->
<% messages() %>

<!-- Add Inventory Form -->
  <form action="/inv/add-inventory" method="post" id="addInventoryForm">
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" required>

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" required>

    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" value="<%= locals.inv_year %>" min="1900" max="2099" required>

    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required><%= locals.inv_description %></textarea>

    <label for="inv_image">Image Path:</label>
    <input type="text" id="inv_image" name="inv_image" value="<%= locals.inv_image %>" required placeholder="/images/vehicles/no-image.png">

    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= locals.inv_thumbnail %>" required placeholder="/images/vehicles/no-image-tn.png">

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" value="<%= locals.inv_price %>" required>

    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" value="<%= locals.inv_miles %>" required>

    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" value="<%= locals.inv_color %>" required>

    <label for="classification_id">Classification Id:</label>
    <%- classificationList %>
    <!-- <input type="number" id="classification_id" name="classification_id" required> -->
    

    <button type="submit">Add Inventory Item</button>
  </form>




